<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Danh Sách Sản Phẩm</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <th>
                                        Tên Sản Phẩm
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Số Lượng
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </thead>
                                <tbody>
                                    <% listProduct.forEach(function(item){ %>
                                    <tr>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.price %>
                                        </td>
                                        <td>
                                            <%= item.count %>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-success" data-toggle="modal"
                                                data-target="#exampleModal"><i class="fas fa-edit"></i></button>
                                            <button type="button" class="btn btn-danger"><i
                                                    class="far fa-trash-alt"></i></button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form class="form-inline" name="fr" action="" method="post">
                                                        <div class="form-group mr-2" style="width: 100%;">
                                                            <label for="email">Tên Sản Phẩm:</label>
                                                            <input name="name" type="text" class="form-control"
                                                                style="width:100%" value="">
                                                        </div>
                                                        <div class="form-group" style="width: 100%;">
                                                            <label for="price">Giá Sản Phẩm:</label>
                                                            <input name="price" type="text" class="form-control"
                                                                style="width:100%" value="">
                                                        </div>
                                                        <div class="form-group" style="width: 100%;">
                                                            <label for="count">Số lượng Sản Phẩm:</label>
                                                            <input name="count" type="text" class="form-control"
                                                                style="width:100%" value="">
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title mt-0"> Thêm Sản Phẩm</h4>
                        <p class="card-category"> Sản Phẩm Sẽ Được Thêm Ở Đây</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <!-- <table class="table"> -->
                            <!-- <thead class=" text-primary">
                                    <th>
                                        Tên Sản Phẩm
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Số Lượng
                                    </th>
                                    <th>
                                        Hình Ảnh Sản Phẩm
                                    </th>
                                </thead> -->
                            <!-- <tbody> -->
                            <!-- <tr> -->
                            <form class="form-inline" name="fr" action="/api/product/add" method="post">
                                <div class="form-group mr-2" style="width: 30%;">
                                    <label for="email">Tên Sản Phẩm:</label>
                                    <input name="name" type="text" class="form-control" required style="width:100%">
                                </div>
                                <div class="form-group" style="width: 30%;">
                                    <label for="price">Giá Sản Phẩm:</label>
                                    <input name="price" type="text" class="form-control" required style="width:100%">
                                </div>
                                <div class="form-group" style="width: 30%;">
                                    <label for="count">Số lượng Sản Phẩm:</label>
                                    <input name="count" type="text" class="form-control" required style="width:100%">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-submit" onclick="checkValidate()">Save</button>
                                </div>
                            </form>
                            <!-- </tr> -->
                            <!-- </tbody> -->
                            <!-- </table> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>