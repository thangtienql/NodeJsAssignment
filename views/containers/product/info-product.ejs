<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Danh Sách Sản Phẩm</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <th>
                                        Tên Sản Phẩm
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Số Lượng
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </thead>
                                <tbody>
                                    <% listProduct.forEach(function(item){ %>
                                    <tr>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.price %>
                                        </td>
                                        <td>
                                            <%= item.count %>
                                        </td>
                                        <td>
                                            <a href="/edit-product/<%= item._id %>">
                                                <button type="button" class="btn btn-success"><i
                                                        class="fas fa-edit"></i></button>
                                            </a>
                                            <button type="button" class="btn btn-danger"><i
                                                    class="far fa-trash-alt"></i></button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title mt-0"> Thêm Sản Phẩm</h4>
                        <p class="card-category"> Sản Phẩm Sẽ Được Thêm Ở Đây</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <!-- <table class="table"> -->
                            <!-- <thead class=" text-primary">
                                    <th>
                                        Tên Sản Phẩm
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Số Lượng
                                    </th>
                                    <th>
                                        Hình Ảnh Sản Phẩm
                                    </th>
                                </thead> -->
                            <!-- <tbody> -->
                            <!-- <tr> -->
                            <form class="form-inline" name="fr" action="/api/product/add" method="post">
                                <div class="form-group mr-2" style="width: 30%;">
                                    <label for="email">Tên Sản Phẩm:</label>
                                    <input name="name" type="text" class="form-control" required style="width:100%">
                                </div>
                                <div class="form-group" style="width: 30%;">
                                    <label for="price">Giá Sản Phẩm:</label>
                                    <input name="price" type="text" class="form-control" required style="width:100%">
                                </div>
                                <div class="form-group" style="width: 30%;">
                                    <label for="count">Số lượng Sản Phẩm:</label>
                                    <input name="count" type="text" class="form-control" required style="width:100%">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-submit" onclick="checkValidate()">Save</button>
                                </div>
                            </form>
                            <!-- </tr> -->
                            <!-- </tbody> -->
                            <!-- </table> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>